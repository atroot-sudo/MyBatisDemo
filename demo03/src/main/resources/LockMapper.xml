<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.theoldzheng.dao.LockMapper">

    <select id="getLockByIdSimple" resultType="com.theoldzheng.pojo.Lock">
        select *
        from t_lock
        where id = #{id}
    </select>


    <select id="getLockById" resultMap="lock">
        SELECT l.id lid, l.lockname, k.id kid, k.keyname
        FROM t_lock l
                 LEFT JOIN t_key k ON l.id = k.lockid
        WHERE l.id = #{id}
    </select>

    <resultMap id="lock" type="com.theoldzheng.pojo.Lock">
        <id property="id" column="lid"/>
        <result property="lockName" column="locjname"/>
        <collection property="keyList" ofType="com.theoldzheng.pojo.Key">
            <id property="id" column="kid"/>
            <result property="keyName" column="keyname"/>
        </collection>
    </resultMap>

</mapper>